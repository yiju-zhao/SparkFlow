# SparkFlow Web Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================
# NextAuth.js Configuration
# ==============================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3001

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/sparkflow?schema=public"

# ==============================================
# Agent API Configuration
# ==============================================
# FastAPI agent server URL
AGENT_API_URL=http://localhost:8101
# Internal API key for secure service-to-service auth (must match Agent)
INTERNAL_API_KEY=your_internal_api_key_here

# ==============================================
# RagFlow Configuration
# ==============================================
# RagFlow API base URL
RAGFLOW_BASE_URL=http://localhost:9380
# RagFlow API key (get from RagFlow settings)
RAGFLOW_API_KEY=your-ragflow-api-key-here
