# SparkFlow Environment Variables
# Copy to .env and fill in your values
# Usage: docker compose up -d

# ============================================
# Web App (Next.js)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_super_secret_jwt_key_change_in_production
NEXTAUTH_URL=http://localhost:3003
OPENAI_API_KEY=your_openai_key_here

# ============================================
# PostgreSQL
# ============================================
POSTGRES_USER=sparkflow
POSTGRES_PASSWORD=sparkflow
POSTGRES_DB=sparkflow
POSTGRES_PORT=5432

# ============================================
# MinIO (S3-compatible Object Storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=sparkflow-images
S3_REGION=us-east-1

# ============================================
# RAGFlow (External RAG Service)
# ============================================
RAGFLOW_BASE_URL=http://ragflow:9380
RAGFLOW_API_KEY=your_ragflow_api_key_here
RAGFLOW_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5@BAAI
RAGFLOW_CHUNK_SIZE=1024
RAGFLOW_AUTO_KEYWORDS=0
RAGFLOW_AUTO_QUESTIONS=0
RAGFLOW_TOC_ENHANCE=false

# ============================================
# LangGraph Agent (runs via `langgraph up`)
# ============================================
NEXT_PUBLIC_LANGGRAPH_API_URL=http://localhost:8123

# ============================================
# Crawl4AI (Webpage Crawler)
# ============================================
CRAWL4AI_BASE_URL=http://crawl4ai:11235

# ============================================
# MineRU (PDF Parsing)
# ============================================
MINERU_BASE_URL=http://mineru:8000
