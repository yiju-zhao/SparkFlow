# SparkFlow Web Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================
# NextAuth.js Configuration
# ==============================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3001

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/sparkflow?schema=public"

# ==============================================
# Agent API Configuration
# ==============================================
# FastAPI agent server URL
AGENT_API_URL=http://localhost:8101
# Internal API key for secure service-to-service auth (must match Agent)
INTERNAL_API_KEY=your_internal_api_key_here

# ==============================================
# OpenAI API Configuration
# ==============================================
# OpenAI API key for LLM services
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# LangGraph Configuration
# ==============================================
# LangGraph API URL (for client-side streaming)
NEXT_PUBLIC_LANGGRAPH_API_URL=http://localhost:8123

# ==============================================
# RagFlow Configuration
# ==============================================
# RagFlow API base URL
RAGFLOW_BASE_URL=http://localhost:9380
# RagFlow API key (get from RagFlow settings)
RAGFLOW_API_KEY=your-ragflow-api-key-here
# RagFlow embedding model (default: BAAI/bge-large-en-v1.5)
RAGFLOW_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5@BAAI
# Chunk size used when splitting documents (1-2048, default 1024)
RAGFLOW_CHUNK_SIZE=1024
# Number of auto-generated keywords per chunk (0-32, default 0)
RAGFLOW_AUTO_KEYWORDS=0
# Number of auto-generated questions per chunk (0-10, default 0)
RAGFLOW_AUTO_QUESTIONS=0
# Enable table of contents extraction during parsing (default false)
RAGFLOW_TOC_EXTRACTION=false

# ==============================================
# Crawl4AI Configuration
# ==============================================
# Crawl4AI API base URL for webpage-to-markdown conversion
CRAWL4AI_BASE_URL=http://localhost:11235
# Crawl4AI API key (optional, leave empty if not required)
CRAWL4AI_API_KEY=

# ==============================================
# MineRU Configuration
# ==============================================
# MineRU API base URL for PDF parsing
MINERU_BASE_URL=http://localhost:8000

# ==============================================
# S3/MinIO Configuration
# ==============================================
# S3-compatible object storage for images
S3_ENDPOINT=http://localhost:9002
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=sparkflow-images
S3_REGION=us-east-1



