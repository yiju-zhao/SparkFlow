# SparkFlow Environment Variables (Docker)
# Copy to .env and fill in your values
# Usage: docker compose -f docker-compose.yml -f docker-compose.dev.yml up

# ============================================
# API Keys (Required)
# ============================================
OPENAI_API_KEY=your_openai_key_here
RAGFLOW_API_KEY=your_ragflow_api_key_here

# ============================================
# Authentication (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_in_production
NEXTAUTH_URL=http://localhost:3001

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_USER=sparkflow
POSTGRES_PASSWORD=sparkflow
POSTGRES_DB=sparkflow

# ============================================
# Service URLs (Docker container names)
# ============================================
RAGFLOW_BASE_URL=http://ragflow:9380
NEXT_PUBLIC_LANGGRAPH_API_URL=http://localhost:2024

# ============================================
# RAGFlow Configuration
# ============================================
RAGFLOW_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5@BAAI
RAGFLOW_CHUNK_SIZE=1024
RAGFLOW_AUTO_KEYWORDS=0
RAGFLOW_AUTO_QUESTIONS=0
RAGFLOW_TOC_ENHANCE=false

# ============================================
# Crawl4AI Configuration
# ============================================
CRAWL4AI_API_TOKEN=

# ============================================
# MineRU Configuration (PDF parsing)
# ============================================
MINERU_BASE_URL=http://mineru:8000

# ============================================
# MinIO Object Storage (S3-compatible)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=sparkflow-images
S3_REGION=us-east-1

# ============================================
# Optional Services
# ============================================
GOOGLE_API_KEY=
LANGSMITH_API_KEY=
